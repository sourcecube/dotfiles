# wifi functions
function wifiScan() {
  nmcli device wifi list
}

function wifiConnect() {
  nmcli device wifi connect "$1" password "$2"
}

function wifiInterface() {
  sudo ip link set wlp3s0 $1
}

# system support functions
function update() {
  figlet -f small update system 
  sudo pacman -Syu
}
